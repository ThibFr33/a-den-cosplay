<li class="dropdown" data-controller="dropdown">
  <button
    class="dropbtn"
    data-action="click->dropdown#toggle"
    aria-haspopup="true"
    aria-expanded="false"


  >
   <% if current_user.member.photos.attached? %>
      <%= image_tag(
            current_user.member.photos.first.variant(resize_to_fill: [50, 50]),
            class: "avatar rounded-circle me-2",
            alt: current_user.username
          ) %>
    <% else %>
      <%= image_tag(
            "default_avatar.png",
            class: "avatar rounded-circle me-2",
            alt: "Avatar par défaut",
            size: "32x32"
          ) %>
    <% end %>

  </button>

  <ul class="dropdown-content" data-dropdown-target="menu">
    <li><%= link_to "Mon profil", member_path(current_user.member), class: "dropdown-item" %></li>
    <li><%= link_to "Modifier le profil", edit_profile_path, class: "dropdown-item" %></li>
    <li>
      <%= button_to "Se déconnecter",
                    destroy_user_session_path,
                    method: :delete,
                    data: { turbo_confirm: "Es-tu sûr ?" },
                    class: "dropdown-item" %>
    </li>
  </ul>
</li>
