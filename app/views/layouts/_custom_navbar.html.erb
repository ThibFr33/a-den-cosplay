        <li class="nav-item">
          <%= link_to "Nous contacter", new_contact_form_path, class: "nav-link" %>
        </li>

        <% unless user_signed_in? %>
          <% if controller_name == "members" && action_name == "show" %>
            <li class="nav-item mt-2">
              <button class="btn" data-bs-toggle="modal" data-bs-target="#loginModal">
                <%= image_tag "https://img.icons8.com/windows/32/mandalorian.png",
                              alt: "Se connecter",
                              class: "mandalorian-btn" %>
              </button>
            </li>
          <% end %>
        <% end %>

        <% if user_signed_in? %>
          <%= render "layouts/user_dropdown" %>
        <% end %>
      </ul>

    </div>
  </div>
