          <%= link_to "Accueil", home_path, class: "nav-link" %>
        </li>

        <li class="nav-item">
          <%= link_to "Le Clan", about_path, class: "nav-link" %>
        </li>

        <li class="nav-item">
          <%= link_to "Membres", members_path, class: "nav-link" %>
