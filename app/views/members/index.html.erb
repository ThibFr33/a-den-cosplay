
 <h1 > Nos membres </h1>

<div class="members-list">
  <% @members.each do |member| %>
    <div class="member-card">
      <%= link_to member_path(member) do %>
        <% if member.photos.attached? %>
          <%= image_tag url_for(member.photos.first), class: "w-full h-48 object-cover", alt: member.pseudo, loading: "lazy" %>
        <% end %>
      <% end %>
      <div class="p-4">
        <h2><%= member.pseudo %></h2>
        <p class="text-sm text-gray-600 text-center"><%= truncate(member.presentation, length: 100) %></p>
        <% if member.reseau_social.present? %>
          <div class="flex justify-center mt-4">
            <%= link_to member.reseau_social, target: "_blank", class: "text-blue-500 hover:text-blue-700" do %>
              <i class="fab fa-instagram"></i> <!-- icÃ´ne FontAwesome ou autre -->
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
