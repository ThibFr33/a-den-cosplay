<% if @member.photos.attached? %>
  <div id="memberPhotosCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5000">
    <div class="carousel-inner">
      <% @member.photos.attachments.each_with_index do |attachment, index| %>
        <div class="carousel-item <%= 'active' if index.zero? %>">
          <!-- Affiche le blob via l’attachment -->
          <%= image_tag url_for(attachment), class: "d-block w-100", alt: @member.pseudo %>

          <!-- Lien de suppression : on passe attachment.id et Turbo s’en charge -->
          <%= link_to "Supprimer cette photo",
                      member_photo_path(@member, attachment.id),
                      data: {
                        turbo_method:  :delete,
                        turbo_confirm: "Vous allez supprimer cette photo, êtes vous sûr(e) ?",
                        turbo_stream: false
                      },
                      class: "btn btn-danger btn-sm mt-2" %>
        </div>
      <% end %>
    </div>

    <button class="carousel-control-prev" type="button"
            data-bs-target="#memberPhotosCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Précédent</span>
    </button>
    <button class="carousel-control-next" type="button"
            data-bs-target="#memberPhotosCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Suivant</span>
    </button>
  </div>
<% end %>
