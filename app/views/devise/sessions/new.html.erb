<div class="container mt-5" style="max-width: 420px;">
  <div class="card border-0 shadow-lg" style="background: #000; border-radius: 1.5rem;">
    <div class="card-body py-4 px-4">

      <h2 class="text-center mb-4"
          style="color: #FFD600; font-family: 'Orbitron', sans-serif; letter-spacing: 1.5px;">
        Connexion
      </h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-3">
          <%= f.label :email, "Adresse email",
                class: "form-label",
                style: "color:#FFD600;" %>

          <%= f.email_field :email,
                autofocus: true,
                autocomplete: "email",
                class: "form-control bg-dark text-light border-0 rounded-pill",
                style: "box-shadow:none;" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, "Mot de passe",
                class: "form-label",
                style: "color:#FFD600;" %>

          <%= f.password_field :password,
                autocomplete: "current-password",
                class: "form-control bg-dark text-light border-0 rounded-pill",
                style: "box-shadow:none;" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-check mb-3">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, "Se souvenir de moi",
                  class: "form-check-label",
                  style: "color:#ccc;" %>
          </div>
        <% end %>

        <div class="d-grid mb-3">
          <%= f.submit "Se connecter",
                class: "btn btn-warning btn-lg rounded-pill fw-bold",
                style: "letter-spacing:1px;" %>
        </div>

      <% end %>

      <div class="text-center mt-3">
        <%= link_to "Mot de passe oubliÃ© ?",
              new_user_password_path,
              class: "text-secondary",
              style:"font-size:14px;" %>
      </div>

    </div>
  </div>
</div>

