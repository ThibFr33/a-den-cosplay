<h1>Contactez-nous</h1>

<%= form_with scope: :contact_form, url: contact_form_index_path, method: :post, local: true, class: "form-container" do |form| %>
  <div class="form-group">
    <%= form.label :Prénom, class: "form-label" %>
    <%= form.text_field :Prénom, class: "form-input" %>
  </div>
  <div class="form-group">
    <%= form.label :Nom, class: "form-label" %>
    <%= form.text_field :Nom, class: "form-input" %>
  </div>
  <div class="form-group">
    <%= form.label :email, class: "form-label" %>
    <%= form.email_field :email, class: "form-input" %>
  </div>
  <div class="form-group">
    <%= form.label :message, class: "form-label" %>
    <%= form.text_area :message, class: "form-input" %>
  </div>
  <%= form.submit "Envoyer", class: "form-submit" %>
<% end %>

