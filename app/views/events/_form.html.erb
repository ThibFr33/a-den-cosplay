<%= form_with model: event, local: true do |f| %>

  <div class="mb-3">
    <%= f.label :name, "Nom de l'événement", class: "form-label label-ghost" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :localisation, "Lieu", class: "form-label label-ghost" %>
    <%= f.text_field :localisation, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :description, "Description", class: "form-label label-ghost" %>
    <%= f.text_area :description, rows: 5, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :url, "Lien (site, billet...)", class: "form-label label-ghost" %>
    <%= f.text_field :url, class: "form-control" %>
  </div>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= f.label :start_date, "Date de début", class: "form-label label-ghost" %>
      <%= f.date_field :start_date, class: "form-control" %>
    </div>

    <div class="col-md-6 mb-3">
      <%= f.label :end_date, "Date de fin", class: "form-label label-ghost" %>
      <%= f.date_field :end_date, class: "form-control" %>
    </div>
  </div>

  <div class="d-grid mt-4">
    <%= f.submit "Mettre à jour", class: "btn btn-warning btn-lg" %>

  </div>

<% end %>
