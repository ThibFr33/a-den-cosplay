<div class="container mt-5">
  <div class="card mx-auto" style="max-width: 700px; background-color:rgba(0,0,0,0.6); color: #eee;">
    <div class="card-header text-center">
      <h1 class="mb-0"><%= @event.name %></h1>
      <% if user_signed_in? && (current_user.admin?) %>
            <button type="button"
                    class="btn btn-dark btn-sm rounded-circle shadow ms-2"
                    data-bs-toggle="modal"
                    data-bs-target="#addPhotoModal"
                    title="Ajouter une photo">
              <i class="fa-solid fa-camera"></i>
            </button>
          <% end %>
    </div>

    <div class="card-body">

      <%# Affiche le carousel partagé %>
      <div id="carousel">
        <%= render "layouts/carousel", object: @event %>
      </div>

      <p class="mt-3">
        <strong>Date :</strong>
        <%= l(@event.start_date, format: :long) %>
        <% if @event.end_date && @event.end_date != @event.start_date %>
          au <%= l(@event.end_date, format: :long) %>
        <% end %>
      </p>

      <% if @event.localisation.present? %>
        <p><strong>Lieu :</strong> <%= @event.localisation %></p>
      <% end %>

      <% if @event.description.present? %>
        <div class="mt-3">
          <p><%= simple_format(@event.description) %></p>
        </div>
      <% end %>

    </div>
  </div>
</div>
